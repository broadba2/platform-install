# ONOS with XOS features for docker-compose
version: '2'

services:

   xos-onos:
      image: {{ onos_docker_image }}
      ports:
       - "6653:6653" # OpenFlow
       - "8101:8101" # ONOS SSH
       - "8181:8181" # ONOS UI/API
       - "9876:9876" # ONOS Clustering
       - "2620:2620" # vRouter
      restart: unless-stopped

