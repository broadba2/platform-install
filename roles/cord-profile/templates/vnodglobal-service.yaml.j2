    onosmodel#globalONOS:
      type: tosca.nodes.OnosModel
      requirements:
      properties:
        name: globalONOS
        onos_ip: 127.0.0.1
        onos_port: 8181
        onos_username: onos
        onos_password: rocks
        onos_type: global

